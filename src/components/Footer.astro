<style define:vars={{ darkLink }}>
  .links {
    display: flex;
    justify-content: space-between;
  }

  a {
    font-size: 1rem;
    font-weight: 400;
    color: var(--darkLink);
    border-bottom: none;
  }

  a:hover {
    color: dodgerblue;
  }

  :global(.dark) a {
    color: white;
  }

  :global(.dark) a:hover {
    color: dodgerblue;
  }

  .push-left {
    margin-right: 1rem;
  }

  .hr {
    margin-top: 2rem;
  }

  .pokemon {
    display: flex;
    justify-content: center;
    align-items: baseline;
    margin-top: 2rem;
    gap: 0.5rem;
  }

  @media (min-width: 40rem) {
    .push-left {
      margin-right: 1.5rem;
    }
  }
</style>