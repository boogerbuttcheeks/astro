---
const lightGlow = 'rgb(227, 227, 227)'
const darkGlow = 'rgb(0, 84, 255)'
const darkBg = 'rgb(41, 44, 57)'
const lightBg = 'rgb(250, 250, 250)'
---

<div class='wrapper'>
  <hr />
  <h2>More Posts</h2>
  <a href='https://text2array.vercel.app/'>
  <div class='post'>
    <p>Text 2 Array Tool</p>
    <p class='date'>DEC 2022</p>
  </div>
  </a>
</div>

<style define:vars={{ lightGlow, darkGlow, lightBg, darkBg }}>
  h2 {
    margin-bottom: 1rem;
  }

  p {
    margin: 0;
    padding: 0;
  }

  a {
    color: inherit;
  }

  a:hover .post {
    transform: scale(1.02);
    box-shadow: 0 0 1rem var(--darkGlow);
    text-shadow: 0 0 1rem var(--darkGlow);
  }

  a:focus .post {
    transform: scale(1.02);
    box-shadow: 0 0 1rem var(--darkGlow);
    text-shadow: 0 0 1rem var(--darkGlow);
  }

  a:hover p {
    box-shadow: none;
    text-shadow: none;
  }

  a:focus p {
    box-shadow: none;
    text-shadow: none;
  }

  :global(.dark) a:hover .post {
    transform: scale(1.02);
    box-shadow: 0 0 1rem var(--lightGlow);
    text-shadow: 0 0 1rem var(--lightGlow);
  }

  :global(.dark) a:focus .post {
    transform: scale(1.02);
    box-shadow: 0 0 1rem var(--lightGlow);
    text-shadow: 0 0 1rem var(--lightGlow);
  }

  .post {
    background: var(--lightBg);
    border-radius: 8px;
    padding: 0.75rem;
    transition: 0.2s;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  :global(.dark) .post {
    background: var(--darkBg);
  }

  .date {
    font-size: 0.75rem;
    opacity: 0.5;
  }

  .wrapper {
    margin-bottom: 3rem;
  }

  hr {
    margin-bottom: 2rem;
  }

</style>